<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:id="@+id/image_dot_1"
        android:src="@drawable/dotfree"
        android:layout_marginLeft="152dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:id="@+id/image_dot_2"
        android:src="@drawable/dotfree"
        android:layout_alignTop="@+id/image_dot_1"
        android:layout_toRightOf="@+id/image_dot_1"
        android:layout_toEndOf="@+id/image_dot_1" />

    <ImageView
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:id="@+id/image_dot_3"
        android:src="@drawable/dotfree"
        android:layout_alignTop="@+id/image_dot_2"
        android:layout_toRightOf="@+id/image_dot_2"
        android:layout_toEndOf="@+id/image_dot_2" />

    <ImageView
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:id="@+id/image_dot_4"
        android:src="@drawable/dotfree"
        android:layout_alignTop="@+id/image_dot_3"
        android:layout_toRightOf="@+id/image_dot_3"
        android:layout_toEndOf="@+id/image_dot_3" />
    <ImageView
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:id="@+id/image_dot_5"
        android:src="@drawable/dotfree"
        android:layout_alignTop="@+id/image_dot_4"
        android:layout_toRightOf="@+id/image_dot_4"
        android:layout_toEndOf="@+id/image_dot_4"/>
</RelativeLayout>