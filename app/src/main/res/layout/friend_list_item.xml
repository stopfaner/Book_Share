<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auttaaeap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ua.stopfan.bookshare.UserInterface.widgets.BezelImageView
        android:id="@+id/people_icon"
        android:layout_margin="15dp"
        android:layout_width="@dimen/navdrawer_profile_image_size"
        android:layout_height="@dimen/navdrawer_profile_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/person_image_empty"
        auttaaeap:maskDrawable="@drawable/circle_mask"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/name_view"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/people_icon"
        android:layout_toRightOf="@+id/people_icon"
        android:layout_toEndOf="@+id/people_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Books count: "
        android:id="@+id/count_view"
        android:layout_alignBottom="@+id/people_icon"
        android:layout_alignLeft="@+id/name_view"
        android:layout_alignStart="@+id/name_view" />


</RelativeLayout>