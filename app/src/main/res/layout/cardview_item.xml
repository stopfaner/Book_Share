<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="155dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    card_view:cardPreventCornerOverlap="false"
    android:layout_marginRight="8dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_weight="0.03"
    card_view:cardElevation="2.5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/body_text_1"
            android:textSize="25dp"
            android:text="Title text"
            android:paddingLeft="-2dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

            <TextView
                android:id="@+id/sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_grey_500"
                android:textSize="15dp"
                android:text="Subtitle text"
                android:layout_below="@+id/text"
                android:layout_alignLeft="@+id/text"
                android:layout_alignStart="@+id/text" />

            <View
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e5e5e5"
                android:gravity="start|center_vertical"
                android:id="@+id/separetor"
                android:layout_marginTop="30dp"
                android:paddingLeft="100dp"
                android:layout_below="@+id/sub_text"
                android:layout_centerHorizontal="true" />

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/review"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:text="REVIEW"
                android:background="@color/material_amber_500"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:clickable="true"
                android:layout_alignTop="@+id/separetor"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
            android:layout_width="100dp"
            android:layout_height="155dp"
            android:layout_marginLeft="-2dp"
            android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_delete"
                android:background="@drawable/pressed_text"
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="1dp"
                android:paddingRight="2dp"
                android:layout_below="@+id/separetor"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageButton2"
                android:layout_marginTop="0.5dp"
                android:layout_marginRight="1dp"
                android:src="@drawable/ic_share_grey600_24dp"
                android:background="@drawable/pressed_text"
                android:layout_below="@+id/separetor"
                android:layout_toLeftOf="@+id/imageButton"
                android:layout_toStartOf="@+id/imageButton" />

    </RelativeLayout>
</android.support.v7.widget.CardView>